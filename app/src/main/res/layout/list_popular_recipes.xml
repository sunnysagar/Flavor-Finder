<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popularCard"
    android:layout_width="170dp"
    android:layout_height="170dp"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="9dp">

    <ImageView
        android:id="@+id/imageView_popular_food"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:src="@drawable/sunny"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="#2D373737"
        android:layout_marginTop="116dp"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textView_popular_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxLines="1"
        android:text="Dish Name"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="22sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="0dp"
        android:gravity="center">

        <TextView
            android:id="@+id/imageView_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ready in "
            android:textSize="18sp"
            android:textColor="@color/white"/>
        <TextView
            android:id="@+id/textView_popular_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="25 mins"
            android:textColor="@color/white" />

    </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>